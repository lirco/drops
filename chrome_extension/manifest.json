{
  "manifest_version": 2,
  "name": "Drops",
  "description": "Drop your notes anywhere",
  "version": "0.1",
  "permissions": [
    "http://*/",
    "http://localhost:3000/*"
  ],
  "background": {
    "scripts": ["lib/angular/angular.min.js"]
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "modules/core/views/popup.html"
  }
}