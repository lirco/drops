{
  "manifest_version": 2,
  "name": "clipto",
  "description": "Drop your notes anywhere",
  "version": "0.1",
  "permissions": [
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "app/lib/angular/angular.min.js", //this is not neccassary anymore
      "background/clipto.background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/",
        "https://*/",
        "<all_urls>"
      ],
      "js": ["jquery-1.12.1.min.js","content_script/content.script.js"],
      "css": ["css/content.style.css"]
    }
  ],
  "web_accessible_resources": [
    "clipto.pane.html",
    "clipto.pane.js",
    "app/icons/attach-24-blue.png",
    "app/icons/attach-24-yellow.png",
    "app/icons/pencil-24-blue.png",
    "app/icons/pencil-24-yellow.png",
    "app/clipto.box.html"

  ],
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png"
//    "default_popup": "index.html"
  }
}

